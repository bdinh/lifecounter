<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="283dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/p1label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 1"
                android:textColor="@android:color/background_dark" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/p1life"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark" />

            <Button
                android:id="@+id/p1add1"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="+" />

            <Button
                android:id="@+id/p1sub1"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="-" />

            <Button
                android:id="@+id/p1add5"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="+5" />

            <Button
                android:id="@+id/p1sub5"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="-5"
                android:textAlignment="center" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/p2label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 2"
                android:textColor="@android:color/background_dark" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/p2life"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark" />

            <Button
                android:id="@+id/p2add1"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="+" />

            <Button
                android:id="@+id/p2sub1"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="-" />

            <Button
                android:id="@+id/p2add5"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="+5" />

            <Button
                android:id="@+id/p2sub5"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="-5"
                android:textAlignment="center" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/p3label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 3"
                android:textColor="@android:color/background_dark" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/p3life"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark" />

            <Button
                android:id="@+id/p3add1"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="+" />

            <Button
                android:id="@+id/p3sub1"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="-" />

            <Button
                android:id="@+id/p3add5"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="+5" />

            <Button
                android:id="@+id/p3sub5"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="-5"
                android:textAlignment="center" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/p4label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 4"
                android:textColor="@android:color/background_dark" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/p4life"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark" />

            <Button
                android:id="@+id/p4add1"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="+" />

            <Button
                android:id="@+id/p4sub1"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="-" />

            <Button
                android:id="@+id/p4add5"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="+5" />

            <Button
                android:id="@+id/p4sub5"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="-5"
                android:textAlignment="center" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/endDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Update"
        android:textColor="#000000"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tableLayout"
        app:layout_constraintStart_toStartOf="@+id/tableLayout" />

</android.support.constraint.ConstraintLayout>